= form_for @widget_generation_request do |f|
  - if @widget_generation_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@widget_generation_request.errors.count, "error")} prohibited this widget_generation_request from being saved:"
      %ul
        - @widget_generation_request.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :params
    = f.text_area :params
  .field
    = f.label :client_id
    = f.number_field :client_id
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
